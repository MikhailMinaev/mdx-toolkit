{
  "name": "mdx-toolkit",
  "displayName": "MDX Toolkit",
  "description": "A comprehensive toolkit for working with MDX files in VS Code",
  "version": "0.1.0",
  "publisher": "MikhailMinaev",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Language Packs",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mdx"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MikhailMinaev/mdx-toolkit.git"
  },
  "keywords": [
    "MDX",
    "formatter",
    "markdown",
    "jsx",
    "react",
    "documentation",
    "toolkit"
  ],
  "author": {
    "name": "Mikhail Minaev",
    "email": "your-email@example.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MikhailMinaev/mdx-toolkit/issues"
  },
  "homepage": "https://github.com/MikhailMinaev/mdx-toolkit#readme",
  "main": "./out/extension.js",
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "contributes": {
    "languages": [
      {
        "id": "mdx",
        "aliases": [
          "MDX",
          "mdx"
        ],
        "extensions": [
          ".mdx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "mdxToolkit.formatDocument",
        "title": "Format MDX Document",
        "category": "MDX Toolkit"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .mdx",
          "command": "mdxToolkit.formatDocument",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "mdxToolkit.formatDocument",
          "when": "resourceExtname == .mdx"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "MDX Toolkit",
      "properties": {
        "mdxToolkit.formatter.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable MDX file formatting"
        },
        "mdxToolkit.formatter.printWidth": {
          "type": "number",
          "default": 80,
          "description": "Maximum line width for formatting"
        },
        "mdxToolkit.formatter.tabWidth": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces per indentation level"
        },
        "mdxToolkit.formatter.useTabs": {
          "type": "boolean",
          "default": false,
          "description": "Use tabs instead of spaces for indentation"
        },
        "mdxToolkit.formatter.semi": {
          "type": "boolean",
          "default": true,
          "description": "Add semicolons at the end of statements"
        },
        "mdxToolkit.formatter.singleQuote": {
          "type": "boolean",
          "default": true,
          "description": "Use single quotes instead of double quotes"
        },
        "mdxToolkit.formatter.formatTables": {
          "type": "boolean",
          "default": true,
          "description": "Format Markdown tables"
        },
        "mdxToolkit.formatter.formatJSON": {
          "type": "boolean",
          "default": true,
          "description": "Format JSON code blocks"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish:pre-release": "vsce publish --pre-release",
    "install-local": "code --install-extension mdx-toolkit-$(node -p \"require('./package.json').version\").vsix",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/prettier": "^2.7.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "prettier": "^2.8.8"
  }
}
